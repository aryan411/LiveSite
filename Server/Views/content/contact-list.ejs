<div class="container">
    <h1>Contact List</h1>

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <% if(typeof displayName == 'string' && displayName) { %>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                        <% } else { %>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="movieList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <tr>
                            <% if(typeof displayName == 'string' && displayName) { %>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].Name %></td>
                            <td><%= contacts[count].ContactNumber %></td>
                            <td><%= contacts[count].Email %></td>
                            <td>
                                <a href="/contact-list/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td>
                                <a href="/contact-list/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                            <% } else { %>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].Name %></td>
                            <td><%= contacts[count].ContactNumber %></td>
                            <td><%= contacts[count].Email %></td>
                            <% } %>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

